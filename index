    <script>
        // ======================================
        // DATI REALI TECHNOLOGY A.T.G. S.R.L. - LUGLIO 2025
        // ======================================
        const bancheData = {
            labels: ['BDM BANCA', 'BANCA AIDEXA', 'BCC DI ROMA', 'INTESA SANPAOLO', 'KRIPTON SPE', 'BANCA IFIS', 'MPS', 'MERCEDES-BENZ'],
            datasets: [{
                data: [954290, 724565, 432593, 415183, 311959, 207428, 56531, 35899],
                backgroundColor: ['#191970', '#4a69bd', '#6f42c1', '#d63384', '#fd7e14', '#20c997', '#ffc107', '#dc3545']
            }]
        };

        const accordatoUtilizzatoData = {
            labels: ['Scadenza', 'Revoca'],
            datasets: [{
                label: 'Accordato',
                data: [3005886, 132562],
                backgroundColor: '#191970'
            }, {
                label: 'Utilizzato',
                data: [3005886, 102025],
                backgroundColor: '#dc3545'
            }]
        };

        // ======================================
        // CHART OPTIONS
        // ======================================
        const pieOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { position: 'bottom', labels: { font: { size: 10 } } },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            let value = context.raw;
                            return context.label + ': €' + value.toLocaleString('it-IT');
                        }
                    }
                }
            }
        };

        const barOptions = {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: { 
                    ticks: {
                        callback: function(value) {
                            return '€' + (value/1000000).toFixed(1) + 'M';
                        }
                    }
                }
            },
            plugins: {
                legend: { position: 'bottom', labels: { font: { size: 10 } } },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            let value = context.raw;
                            return context.dataset.label + ': €' + value.toLocaleString('it-IT');
                        }
                    }
                }
            }
        };

        // ======================================
        // CHART INITIALIZATION
        // ======================================
        document.addEventListener('DOMContentLoaded', function() {
            // Update current year
            document.getElementById('currentYearSidebar').textContent = new Date().getFullYear();
            document.getElementById('currentYearFooterReport').textContent = new Date().getFullYear();

            // Distribuzione per Banca
            new Chart(document.getElementById('bancheChart').getContext('2d'), {
                type: 'pie',
                data: bancheData,
                options: pieOptions
            });

            // Accordato vs Utilizzato per Tipologia
            new Chart(document.getElementById('accordatoUtilizzatoChart').getContext('2d'), {
                type: 'bar',
                data: accordatoUtilizzatoData,
                options: barOptions
            });
        });
    </script>
